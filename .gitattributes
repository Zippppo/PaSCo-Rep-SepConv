# Auto detect text files and perform LF normalization
* text=auto

# Keep reference repos with original LF line endings
reference_repo/** text eol=lf

# Python files
*.py text eol=lf
*.pyx text eol=lf

# Shell scripts
*.sh text eol=lf

# Markdown files
*.md text eol=lf

# YAML files
*.yaml text eol=lf
*.yml text eol=lf

# C/C++/CUDA files
*.cpp text eol=lf
*.hpp text eol=lf
*.cu text eol=lf
*.cuh text eol=lf
*.c text eol=lf
*.h text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pkl binary
*.pth binary
*.pt binary
